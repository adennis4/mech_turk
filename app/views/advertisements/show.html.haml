=link_to(image_tag(@advertisement.image_url), @advertisement.image_url)
%p=@advertisement.name
%p=@advertisement.description

-unless @advertisement.question == nil
  =form_for @answer do |f|
    %p
      ="Question:"
      =@advertisement.question.quantity_question
    %p
      =f.label :quantity_response, "Answer:"
      =f.text_field :quantity_response
    %p
      ="Question:"
      =@advertisement.question.quality_question
    %p
      =f.label :quality_response, "Answer:"
      =f.text_field :quality_response
      =f.hidden_field :question_id, :value => @advertisement.id
    %p
      =f.submit
